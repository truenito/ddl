- if @latest_matches.empty?
  .centered= "No hay matches en vivo, #{link_to 'Crea un Lobby!', new_match_path}".html_safe
- else
  - @latest_matches.each do |match|
    = link_to(match_path(match))do
      %li
        .title
          %span.designation
            = match.name
            %br
              = match.created_at.strftime("Creada %m/%d/%Y - %I:%M%p")
        .streak= match.pretty_status
        .rating= match.action(current_user)
