%section
  .container
    .row.clearfix
      .col-md-6.col-md-offset-3{style: 'padding-top: 20px;'}
        %h2{ style: ' text-align: center;' } recupera tu password
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
          = devise_error_messages!
          .col-md-6.col-md-offset-3
            .field
              = f.label :email
              %br/
              = f.email_field :email, autofocus: true, class: 'input-area'
            .actions.col-md-3.col-md-offset-1
              = f.submit "Recuperar", class: 'input-button'